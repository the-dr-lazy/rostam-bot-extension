{
  "include": ["src/**/*"],
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext", "scripthost"],
    "strict": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "declaration": false,
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
